<div class="container mt-5">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">店名</th>
        <th scope="col">場所</th>
        <th scope="col">感想</th>
        <th scope="col">投稿者</th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store |%>
        <tr>
          <td><%= link_to  store.name, store_path(store) %></td>
          <td><%= store.address %></td>
          <td><%= store.body %></td>
          <td><%= store.user.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to  "投稿", new_store_path, class: "btn btn-success" %>
</div>