<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @store.name %></h5>
          <p class="card-text"><%= @store.body %></p>
          <p class="card-text"><%= @store.address %></p>
          <p class="card-text">
            <small class="text-muted">更新日：<%= @store.updated_at %></small>
          </p>
          <% if @store.user == current_user %>
            <%= link_to  "編集", edit_store_path, class: "btn btn-success" %>
            <%= link_to  "削除", store_path(@store),method: :delete, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
