<%= form_for @store do |f| %>
  <div class="form-group">
    <label>Store name</label>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <label>Address</label>
    <%= f.text_field :address, class:"form-control" %>
  </div>

  <div class="form-group">
    <label>Content</label>
    <%= f.text_field :body, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br/>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>